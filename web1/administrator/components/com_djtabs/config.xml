					type ="inputbox"
					label="COM_DJTABS_ARTICLES_PER_ROW"
					description="COM_DJTABS_ARTICLES_PER_ROW_GLOBAL_DESC"
					default="1"
					class="param_number"
				/>
				
				<field name ="articles_space"  
					type ="inputbox"
					label="COM_DJTABS_ARTICLES_SPACE"
					description="COM_DJTABS_ARTICLES_SPACE_GLOBAL_DESC"
