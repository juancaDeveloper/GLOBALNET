					type="inputbox"  
					label="COM_DJTABS_ARTICLES_FROM_LAST_X_DAYS" 
					description="COM_DJTABS_ARTICLES_FROM_LAST_X_DAYS_GLOBAL_DESC"
					class="param_number"
				/>
				
				<field type="djspacer" class="djtabspacer"/>
				
