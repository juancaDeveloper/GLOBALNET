<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0"  client="site" method="upgrade">
	<name>JS Gold Companies</name>
	<author>Joom Sky</author>
	<creationDate>Nov 29, 2010</creationDate>
	<copyright>(C) 2009 - 2010. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>ahmad@joomsky.com</authorEmail>
	<authorUrl>www.joomsky.com</authorUrl>
	<version>1.0.0</version>
	<description>Shows Gold companies from JS Jobs database. </description>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" default="Gold Companies" label="JS_TITLE" description="JS_TITLE" />
				<field name="showtitle" type="list" default="1" label="JS_SHOW_TITLE" description="JS_SHOW_TITLE">
					<option value="0">JS_HIDE</option>
					<option value="1">JS_SHOW</option>
				</field>
				<field name="companylogo" type="list" default="1" label="JS_COMPANY_LOGO" description="SHOW_HIDE_THE_COMPANY_LOGO">
					<option value="0">JS_HIDE_ALL</option>
					<option value="1">JS_SHOW_ALL</option>
					<option value="2">JS_SHOW_DESKTOP_AND_TABLET</option>
					<option value="3">JS_SHOW_DESKTOP_AND_MOBILE</option>
					<option value="4">JS_SHOW_TABLET_AND_MOBILE</option>
					<option value="5">JS_SHOW_DESKTOP</option>
					<option value="6">JS_SHOW_TABLET</option>
					<option value="7">JS_SHOW_MOBILE</option>
				</field>
				
				<field name="category" type="list" default="1" label="JS_CATEGORY" description="SHOW_HIDE_THE_CATEGORY">
					<option value="0">JS_HIDE_ALL</option>
					<option value="1">JS_SHOW_ALL</option>
					<option value="2">JS_SHOW_DESKTOP_AND_TABLET</option>
					<option value="3">JS_SHOW_DESKTOP_AND_MOBILE</option>
					<option value="4">JS_SHOW_TABLET_AND_MOBILE</option>
					<option value="5">JS_SHOW_DESKTOP</option>
					<option value="6">JS_SHOW_TABLET</option>
					<option value="7">JS_SHOW_MOBILE</option>
				</field>
				<field name="location" type="list" default="1" label="JS_LOCATION" description="Show/Hide the location">
					<option value="0">JS_HIDE_ALL</option>
					<option value="1">JS_SHOW_ALL</option>
					<option value="2">JS_SHOW_DESKTOP_AND_TABLET</option>
					<option value="3">JS_SHOW_DESKTOP_AND_MOBILE</option>
					<option value="4">JS_SHOW_TABLET_AND_MOBILE</option>
					<option value="5">JS_SHOW_DESKTOP</option>
					<option value="6">JS_SHOW_TABLET</option>
					<option value="7">JS_SHOW_MOBILE</option>
				</field>
				<field name="posteddate" type="list" default="1" label="JS_POSTED" description="Show/Hide the posted date">
					<option value="0">JS_HIDE_ALL</option>
					<option value="1">JS_SHOW_ALL</option>
					<option value="2">JS_SHOW_DESKTOP_AND_TABLET</option>
					<option value="3">JS_SHOW_DESKTOP_AND_MOBILE</option>
					<option value="4">JS_SHOW_TABLET_AND_MOBILE</option>
					<option value="5">JS_SHOW_DESKTOP</option>
					<option value="6">JS_SHOW_TABLET</option>
					<option value="7">JS_SHOW_MOBILE</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="noofjobs" type="text" default="7" label="JS_NUMBER_OF_JOBS" description="JS_MAXIMUM_JOBS" filter="integer"/>
				<field name="listtype" type="list" default="1" label="JS_LISTING_STYLE" description="JS_MODULE_LISTING_STYLE">
					<option value="0">JS_LIST_STYLE</option>
					<option value="1">JS_BOX_STYLE</option>
				</field>
				<field name="logodatarow" type="list" default="1" label="JS_BOX_STYLE" description="JS_WORKS_WITH_BOX_STYLE_ONLY">
					<option value="1">JS_HORIZONTAL</option>
					<option value="2">JS_VERTICAL</option>
				</field>
				<field name="datacolumn" type="list" default="1" label="JS_FIELDS_COLUMN" description="JS_WORKS_WITH_DESKTOP_SCREEN_SIZE_ONLY" filter="integer">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</field>
				<field name="moduleheight" type="text" default="400" label="JS_MODULE_HEIGHT" description="JS_WORKS_WITH_DESKTOP_SCREEN_SIZE_ONLY" filter="integer"/>
				<field name="jobheight" type="text" default="250" label="JS_COMPANY_HEIGHT" description="JS_WORKS_WITH_DESKTOP_SCREEN_SIZE_ONLY" filter="integer"/>
				<field name="companylogowidth" type="text" default="150" label="JS_COMPANY_LOGO_WIDTH" description="JS_WORKS_WITH_HORIZONTAL_BOX_STYLE_ONLY" filter="integer"/>
				<field name="companylogoheight" type="text" default="90" label="JS_COMPANY_LOGO_HEIGHT" description="JS_WORKS_WITH_VERTICAL_BOX_STYLE_ONLY" filter="integer"/>
				<field name="resumesinrow" type="list" default="1" label="JS_NO_OF_COMPANIES_PER_ROW" description="JS_MAXIMUM_COMPANIES_PER_ROW_EFFECTS_DESKTOP_SCREEN_SIZE_ONLY">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</field>
				<field name="resumesinrowtab" type="list" default="1" label="JS_NO_OF_COMPANIES_ROW" description="JS_MAXIMUM_COMPANIES_PER_ROW_EFFECTS_TABLET_SCREEN_SIZE_ONLY">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</field>
				<field name="jobmargintop" type="text" default="10" label="JS_TOP_MARGIN" description="JS_TOP_MARGIN_FOR_SINGLE_JOB" filter="integer"/>
				<field name="jobmarginleft" type="text" default="10" label="JS_LEFT_MARGIN" description="JS_LEFT_MARGIN_FOR_SINGLE_JOB" filter="integer"/>
				
				<field name="Itemid" type="text" default="" label="JS_ITEMID" description="JS_ITEMID" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
					<field name="color1" type="color" label="TITLE_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />
					<field name="color6" type="color" label="TITLE_BOTTOM_BORDER_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />
					<field name="color2" type="color" label="BACKGROUND_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />
					<field name="color3" type="color" label="BORDER_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />
					<field name="color4" type="color" label="DATA_LABEL_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />
					<field name="color5" type="color" label="DATA_VALUE_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />


			</fieldset>
		</fields>
	</config>
	<files>
		<filename module="mod_jsgoldcompanies">mod_jsgoldcompanies.php</filename>
		<filename module="mod_jsgoldcompanies">helper.php</filename>
		<folder module="mod_jsgoldcompanies">tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_jsgoldcompanies.ini</language>
	</languages>
</extension>
