<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0"  client="site" method="upgrade">
	<name>JS Jobs By Countries</name>
	<author>Joom Sky</author>
	<creationDate>jun 22, 2011</creationDate>
	<copyright>(C) 2010. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>ahmad@joomsky.com</authorEmail>
	<authorUrl>www.joomsky.com</authorUrl>
	<version>1.0.0</version>
	<description>Shows jobs by Countries from js jobs database.</description>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" default="Job By Countries" label="JS_TITLE" description="JS_TITLE" />
				<field name="showtitle" type="radio" default="1" label="JS_SHOW_TITLE" description="JS_SHOW_TITLE">
					<option value="0">JS_HIDE</option>
					<option value="1">JS_SHOW</option>
				</field>
				<field name="noofjobs" type="text" default="10" label="JS_DISPLAY_JOBS_BY_COUNTRY" description="JS_MAX_RECORD_100" />
				<field name="scohj" type="radio" default="1" label="JS_SHOW_ONLY_COUNTRY_HAVE_JOBS" description="YES_NO_COUNTRY_HAVE_JOBS">
						<option value="0">No</option>
						<option value="1">Yes</option>
				</field>
				<field name="colperrow" type="text" label="JS_COLUMN_PER_ROW" description="JS_COLUMN_PER_ROW" />
				<field name="Itemid" type="text" default="" label="Item Id" description="Item Id" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
					<field name="color1" type="color" label="TITLE_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />
	                <field name="color2" type="color" label="BACKGROUND_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />
	                <field name="color3" type="color" label="BORDER_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />
			</fieldset>
		</fields>
	</config>
	<files>
		<filename module="mod_jsjobscountry">mod_jsjobscountry.php</filename>
		<filename module="mod_jsjobscountry">helper.php</filename>
		<folder module="mod_jsjobscountry">tmpl</folder>
	</files>
	<language>
		<filename tag="en-GB.mod_jsjobscountry.ini">en-GB.mod_jsjobscountry.ini</filename>
	</language>
</extension>

