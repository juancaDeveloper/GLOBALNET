<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0"  client="site" method="upgrade">
	<name>JS Jobs Stats</name>
	<author>Joom Sky</author>
	<creationDate>Oct 31, 2011</creationDate>
	<copyright>(C) 2009 - 2010. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>ahmad@joomsky.com</authorEmail>
	<authorUrl>www.joomsky.com</authorUrl>
	<version>1.0.3</version>
	<description>Shows Stats from JS Jobs database.</description>
	<config>
		<fields name="params">
			<fieldset name="basic">

				<field name="title" type="text" default="Stats" label="Title" description="Title" />
				<field name="showtitle" type="radio" default="1" label="Show Title" description="Show Title">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="employer" type="radio" default="1" label="JS_SHOW_EMPLOYER" description="Show/Hide the Employer">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="jobseeker" type="radio" default="1" label="JS_SHOW_JOBSEEKER" description="Show/Hide the Jobseeker">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="jobs" type="radio" default="1" label="JS_SHOW_JOBS" description="Show/Hide the Jobs">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="companies" type="radio" default="1" label="JS_SHOW_COMPANIES" description="Show/Hide the Companies">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="activejobs" type="radio" default="1" label="JS_SHOW_ACTIVE_JOBS" description="Show/Hide the Active Jobs">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="resumes" type="radio" default="1" label="JS_SHOW_RESUMES" description="Show/Hide the Resumes">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="todaystats" type="radio" default="1" label="JS_SHOW_TODAY_STATS" description="Show/Hide the Today Stats">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>

				<field name="separator" type="radio" default="1" label="JS_SEPARATOR" description="Show/Hide the line separator">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
					<field name="color4" type="color" label="DATA_LABEL_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />
					<field name="color2" type="color" label="BACKGROUND_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />
					<field name="color1" type="color" label="BORDER_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />

			</fieldset>
		</fields>	
	</config>
	<files>
		<filename module="mod_jsjobsstats">mod_jsjobsstats.php</filename>
		<filename module="mod_jsjobsstats">helper.php</filename>
		<folder module="mod_jsjobsstats">tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_jsjobsstats.ini</language>
	</languages>
</extension>
