<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0"  client="site" method="upgrade">
	<name>JS Resume Search</name>
	<author>Joom Sky</author>
	<creationDate>Oct 29th, 2009</creationDate>
	<copyright>(C) 2009. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>ahmad@joomsky.com</authorEmail>
	<authorUrl>www.joomsky.com</authorUrl>
	<version>1.0</version>
	<description>Resume Search form for JS Jobs.</description>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" default="Resume Search" label="Title" description="Title" />
				<field name="showtitle" type="radio" default="1" label="Show Title" description="Show Title">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="apptitle" type="radio" default="1" label="JS_APPLICATION_TITLE" description="Show/Hide the application title">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="name" type="radio" default="1" label="JS_NAME" description="Show/Hide the name">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="natinality" type="radio" default="1" label="JS_NATIONALITY" description="Show/Hide the natinality">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="gender" type="radio" default="1" label="JS_GENDER" description="Show/Hide the gender">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="iamavailable" type="radio" default="1" label="JS_I_AM_AVAILABLE" description="Show/Hide the i am available">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>


				<field name="category" type="radio" default="1" label="JS_CATEGORY" description="Show/Hide the category">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="subcategory" type="radio" default="1" label="JS_SUB_CATEGORY" description="Show/Hide the subcategory">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="jobtype" type="radio" default="1" label="JS_JOB_TYPE" description="Show/Hide the job type">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="salaryrange" type="radio" default="1" label="JS_SALARY_RANGE" description="Show/Hide the salary range">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="heighesteducation" type="radio" default="1" label="JS_HEIGHEST_EDUCATION" description="Show/Hide the heighest education">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="experience" type="radio" default="1" label="JS_EXPERIENCE" description="Show/Hide the experience">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
		<field name="colperrow" type="text" default="" label="JS_COLUMN_PER_ROW" description="Column per row" />
                <field name="Itemid" type="text" default="" label="ITEMID" description="ITEMID_FOR_NAVIGATION" />

			</fieldset>
		</fields>
	</config>

	<files>
	<filename module="mod_jsresumesearch">mod_jsresumesearch.php</filename>
	<filename module="mod_jsresumesearch">helper.php</filename>
	<folder module="mod_jsresumesearch">tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_jsresumesearch.ini</language>
	</languages>
</extension>

