<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0"  client="site" method="upgrade">
	<name>Search JS Jobs</name>
	<author>Joom Sky</author>
	<creationDate>Nov 27th, 2010</creationDate>
	<copyright>(C) 2009 - 2010. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>ahmad@joomsky.com</authorEmail>
	<authorUrl>www.joomsky.com</authorUrl>
	<version>1.0.3</version>
	<description>Job Search form for JS Jobs.</description>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" default="Job Search" label="Title" description="Title" />
				<field name="showtitle" type="radio" default="1" label="Show Title" description="Show Title">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="category" type="radio" default="1" label="JS_CATEGORY" description="Show/Hide the category">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="subcategory" type="radio" default="1" label="JS_SUB_CATEGORY" description="Show/Hide the subcategory">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="jobtype" type="radio" default="1" label="JS_JOB_TYPE" description="Show/Hide the job type">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="jobstatus" type="radio" default="1" label="JS_JOB_STATUS" description="Show/Hide the job status">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="salaryrange" type="radio" default="1" label="JS_SALARY_RANGE" description="Show/Hide the salary range">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="shift" type="radio" default="1" label="JS_SHIFT" description="Show/Hide the job shift">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="durration" type="radio" default="1" label="JS_DURATION" description="Show/Hide the duration">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="startpublishing" type="radio" default="1" label="JS_START_PUBLISHING_DATE" description="Show/Hide the start publishing date">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="stoppublishing" type="radio" default="1" label="JS_STOP_PUBLISHING_DATE" description="Show/Hide the stop publishing date">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="company" type="radio" default="1" label="JS_COMPANY" description="Show/Hide the company">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="addresses" type="radio" default="1" label="JS_ADDRESSES" description="Show/Hide the addresses">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="colperrow" type="text" default="" label="JS_COLUMN_PER_ROW" description="Column per row" />
                                <field name="Itemid" type="text" default="" label="ITEMID" description="ITEMID_FOR_NAVIGATION" />
				

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
	<files>
	<filename module="mod_jsjobssearch">mod_jsjobssearch.php</filename>
	<filename module="mod_jsjobssearch">helper.php</filename>
	<folder module="mod_jsjobssearch">tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_jsjobssearch.ini</language>
	</languages>
</extension>

