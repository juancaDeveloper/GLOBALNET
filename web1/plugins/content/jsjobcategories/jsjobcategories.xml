<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="content" method="upgrade">
	<name>JS Job By Categories</name>
	<author>Joom Sky</author>
	<creationDate>Dec 30, 2010</creationDate>
	<copyright>(C) 2010. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>ahmad@joomsky.com</authorEmail>
	<authorUrl>www.joomsky.com</authorUrl>
	<version>1.0.0</version>
	<description>Usage {jsjobcategories}. Shows jobs By Categories from JS Jobs database. </description>
	<files>
		<filename plugin="jsjobcategories">jsjobcategories.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_content_jsjobcategories.ini</language>
	</languages>

	<params >
			<param name="noofcategories" type="text" default="-1" label="JS_DISPLAY_MAXIMUM_CATEGORIES" description="Display maximum categories" />
			<param name="title" type="text" default="Jobs By Categories " label="JS_TITLE" description="Title" />
			<param name="shtitle" type="radio" default="1" label="JS_TITLE" description="Show/Hide the title">
			<option value="0">Hide</option>
			<option value="1">Show</option>
			</param>

			<param name="jobsincategory" type="radio" default="1" label="JS_JOBS_IN_CATEGORY" description="Show jobs in category">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="allcategories" type="radio" default="0" label="JS_ALL_CATEGORIES" description="Show all categories">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="separator" type="radio" default="1" label="JS_SEPARATOR" description="Show/Hide the line separator">
			<option value="0">Hide</option>
			<option value="1">Show</option>
			</param>

			<param name="colperrow" type="text" label="JS_COLUMN_PER_ROW" description="Column Per Row" />

		</params>
	<config>
		<fields name="params">
			<fieldset name="basic">

				<field name="noofcategories" type="text" default="-1" label="JS_DISPLAY_MAXIMUM_CATEGORIES" description="Display maximum categories" />
				<field name="theme" type="list" default="1" label="JS_THEME" description="Select theme of this module">
					<option value="1">JS Jobs Theme</option>
					<option value="2">Template Theme</option>
					<option value="0">No Theme</option>
				</field>
				<field name="title" type="text" default="Jobs By Categories " label="JS_TITLE" description="Title" />
				<field name="shtitle" type="radio" default="1" label="JS_TITLE" description="Show/Hide the title">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>

				<field name="jobsincategory" type="radio" default="1" label="JS_JOBS_IN_CATEGORY" description="Show jobs in category">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="allcategories" type="radio" default="0" label="JS_ALL_CATEGORIES" description="Show all categories">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="separator" type="radio" default="1" label="JS_SEPARATOR" description="Show/Hide the line separator">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>

				<field name="colperrow" type="text" label="JS_COLUMN_PER_ROW" description="Column Per Row" />
				<field name="color1" type="color" label="TITLE_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />
                <field name="color2" type="color" label="BACKGROUND_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />
                <field name="color3" type="color" label="BORDER_COLOR" description="LEAVE_BLANK_FOR_DEFAULT_COLOR" />
			</fieldset>
		</fields>
	</config>
</extension>	

